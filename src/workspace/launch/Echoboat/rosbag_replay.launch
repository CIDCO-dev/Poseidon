<!-- -*- mode: XML -*- -->

<launch>

	<param name="/use_sim_time" value="true" />
	<arg name="loggerPath" value="/home/ubuntu/Poseidon/www/webroot/record/"/>
	<arg name="configPath" value="/home/ubuntu/Poseidon/config.txt"/>
	
<!--	<node pkg="tf" type="static_transform_publisher" name="link1_broadcaster" args="0 0 0.5 0 0 0 base_link velodyne 100" />-->
	<node pkg="tf" type="static_transform_publisher" name="link1_broadcaster" args="0 0 0.5 0 0 0.735 base_link velodyne 100" /> 
<!--	<node pkg="tf" type="static_transform_publisher" name="link2_broadcaster" args="-0.3 0 0 0 0 0 base_link sonar 100" /> -->
<!--	<node pkg="tf" type="static_transform_publisher" name="link3_broadcaster" args="1 1 1 1 1 1 base_link gpsAntena 100" />-->

	<node pkg="hydroball_config_websocket" name="hydroball_config_websocket" type="hydroball_config_websocket_node" args="$(arg configPath)" output="screen"/>
	<node pkg="echoboat_odometry" type="echoboat_odometry_node" name="odometry"/>
	<node pkg="rviz" type="rviz" name="rviz" args="-d /home/ubuntu/Poseidon/src/workspace/launch/echoboat.rviz" required="True" />
	<node pkg="rosbag" name="replay"   type="play" args="--clock $(arg bag_filename)" />
	<node pkg="logger" name="logger" type="logger_binary_node" output="screen" args="$(arg loggerPath)" />
	
	<node pkg="state_controller" name="state_controller" type="state_controller_node" output="screen"/>

	<node pkg="hydroball_data_websocket" name="hydroball_data_websocket" type="hydroball_data_websocket_node" args="$(arg loggerPath)" output="screen"/>

<!--	<node pkg="hydroball_files_websocket" name="hydroball_files_websocket" type="hydroball_files_websocket_node" args="$(arg loggerPath)" output="screen"/>-->

</launch>
